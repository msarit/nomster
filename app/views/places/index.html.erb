<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <div class="row">
      <div class="col-12 col-md-8">

        <h1><%= link_to place.name, place_path(place.id) %></h1>
        <em><%= place.address %></em>
        
        <br />
        
        <% if place.user.present? %>
          <small>Added By: <strong><%= place.user.username %></strong></small>
        <% end %>
        
        <br />
        <br />

        <p><%= place.description %></p>
      </div>

      <div class="col-12 col-md-4">
        <% if place.photos.present? %>
          <%= image_tag place.photos.last.picture, class: 'imgboxindex' %>
        <% end %>
      </div>
    </div>

    <% if place.comments.present? %>
      <div class="col-12 clear">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <strong><%= place.comments.last.humanized_rating %></strong>:
          <% end %>
          <%= place.comments.last.message %>&nbsp;&nbsp;&nbsp;
          <small><strong><em>&bull;  <%= place.comments.last.user.username %></em></strong></small>
        </blockquote>
      </div>
    <% end %>
  </div>
<% end %>

<div class="digg_pagination col-10 offset-1">
  <%= will_paginate @places %>
</div>